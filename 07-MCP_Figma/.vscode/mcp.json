{
    "inputs": [{
        "id": "figma-key",
        "type": "promptString",
        "password": true,
        "description": "Enter your Figma API key",
    }],
    "servers": {
        "figma": {
            "command": "npx",
            "args": [
                "-y",
                "figma-developer-mcp",
                "--stdio"
            ],
            "env": {
                "FIGMA_API_KEY": "your api key here"
            }
        }
    }
}